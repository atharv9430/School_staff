    var dataTable = Model.ReportData; // Fetch DataTable from model
    int daysInMonth = Model.DaysInMonth;
    var month = Model.Month;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
