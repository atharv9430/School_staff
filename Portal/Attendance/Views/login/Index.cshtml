<body class="login-page bg-body-secondary">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Attendance </b>System</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to your Account</p>
                <form asp-controller="login" asp-action="schoolLogin" method="post">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Enter user Name" name="username" />
                        <div class="input-group-text"><i class="fa-solid fa-circle-user"></i></div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Enter Password" name="password" />
                        <div class="input-group-text"><i class="fa-solid fa-lock"></i></div>
                    </div>

                    <div class="row">

                        <div class="col-4">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success">Sign In</button>
                            </div>
                        </div>

                    </div>

                    @if (@TempData["success"]=="false")
                    {
                        <div class="text-danger mt-2">Enter Correct Credentials</div>
                    }
                </form>


            </div>

        </div>
    </div>
