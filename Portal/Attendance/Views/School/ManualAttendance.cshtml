@{
    ViewData["Title"] = "Manual Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
                <div class="col-sm-6"><h3 class="mb-0">Add Staff</h3></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-end">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">General Form</li>
                    </ol>
                </div>
            </div>
            <!--end::Row-->
        </div>

    </div>


    <div class="app-content">

        <div class="container-fluid">

            <div class="row g-4">



                <div class="col-md-6">

                    <div class="card card-primary card-outline mb-4">

                        <div class="card-header"><div class="card-title">Staff Registration</div></div>

                        <form>

                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="staffName" class="form-label">Staff Code</label>
                                    <input type="text" class="form-control" id="txt_name" aria-describedby="nameHelp" name="staffCode" />
                                    <div id="emailHelp" class="form-text">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="text" class="form-label">Staff Name</label>
                                    <input type="text" class="form-control" id="stfName" name="stfName" />
                                </div>
                                <div class="mb-3">
                                    <label for="text" class="form-label">Staff Gender</label>
                                    <div class="col-lg-12">
                                        <select id="inputState" class="form-control">
                                            <option selected>Choose...</option>
                                            <option>Male</option>
                                            <option>Female</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="text" class="form-label">Staff Type</label>
                                    <input type="text" class="form-control" id="stfName" name="stfType" />
                                </div>
                                <div class="mb-3">
                                    <label for="text" class="form-label">Staff Department</label>
                                    <input type="text" class="form-control" id="stfName" name="stfDepartment" />
                                </div>
                                <div class="mb-3">
                                    <label for="text" class="form-label">Staff Designation</label>
                                    <input type="text" class="form-control" id="stfName" name="stfDesignation" />
                                </div>
                                <div class="mb-3">
                                    <label for="number" class="form-label">Staff Mobile Number</label>
                                    <input type="number" class="form-control" id="stfName" name="stfmobNumber" />
                                </div>
                                <div class="mb-3">
                                    <label for="date" class="form-label">Staff Joining date</label>
                                    <input type="text" class="form-control" id="stfjoiningDate" name="stfjoiningDate" />
                                </div>
                                <div class="mb-3">
                                    <label for="date" class="form-label">Staff Email</label>
                                    <input type="text" class="form-control" id="stfEmail" name="stfEmail" />
                                </div>
                                <div class="mb-3">
                                    <label for="passsword" class="form-label">Staff Password</label>
                                    <input type="password" class="form-control" id="stfEmail" name="stfPasssword" />
                                </div>
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary" asp-action="AddStaffDetail" asp-controller="Staff">Submit</button>
                            </div>

                        </form>

                    </div>

                </div>

            </div>

        </div>

    </div>

</main>